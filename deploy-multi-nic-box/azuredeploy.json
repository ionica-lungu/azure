        "userImageVhdUri" : {
            "type" : "string",
            "metadata": {
                "description": "URL of the VHD image to deploy"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue" : "ialrmstorwe0",
            "metadata": {
                "description": "Name of the storage account that will hold the newly created resources"
            }
        },
        "storageContainerName" : {
            "type" : "string",
            "defaultValue" : "vhds",
            "metadata": {
                "description": "Name of the container in the storage account"
            }
        },
        "vmName" : {
            "type" : "string",
            "metadata": {
                "description": "Name for the virtual machine"
            }
        },
        "virtualNetName" : {
            "type" : "string",
            "defaultValue" : "ial-rm-net-00",
            "metadata": {
                "description": "Name of the virtual network in which to deploy the virtual machine"
            }
        },
        "virtualNetPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "Virtual network address prefix in CIDR format"
            }
        },
        "numNics" : {
            "type" : "int",
            "minValue" : 1,
            "maxValue" : 8,
            "defaultValue" : 1,
            "metadata" : {
                "description" : "Number of network interfaces"
            }
        },
        "dnsNameForPublicIP" : {
            "type" : "string",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the Virtual Machine"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "location" : {
            "type" : "string",
            "defaultValue" : "West Europe",
            "metadata": {
                "description": "Location of the virtual machine"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue" : "Standard_A3",
            "metadata": {
                "description": "Virtual machine size"
            }
        },
        "osType" : {
            "type" : "string",
            "allowedValues" : [
                "windows",
                "linux"
            ],
            "defaultValue" : "linux",
            "metadata": {
                "description": "OS that the virtual machine will be running"
            }
        },
        "numDataDisks" : {
            "type" : "int",
            "maxValue" : 64,
            "defaultValue" : 0,
            "metadata" : {
                "description" : "Number of data disks"
            }
        },
        "sizeOfDataDisksInGB" : {
            "type" : "int",
            "maxValue" : 32767,
            "defaultValue" : 10,
            "metadata" : {
                "description" : "Size of data disks (in GB)"
            }
